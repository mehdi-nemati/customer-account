{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=CustomerAccount;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
